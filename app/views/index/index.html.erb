<main class="container mt-5">
  <div class="row">
    <div class="col">
      <h1 class="text-center">Accueil</h1>
      <p class="text-center mt-3">Retrouvez sur cette page l'ensemble des rumeurs...</p>
      <% @all_gossips.each do |gossip| %>
        <p><%= gossip.user.first_name%></p>
        <p><%= gossip.title%></p>
        <p><%= gossip.content%></p>
        <a href="gossip/<%= gossip.id %>">Voir le potin</a>
        <a href="user/<%= gossip.user_id %>">Voir le profil de l'utilisateur</a>
      <% end %>
    </div>
  </div>
</div>